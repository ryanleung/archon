$gray-darker  = lighten(#000, 13.5%)
$gray-dark    = lighten(#000, 20%)
$gray         = lighten(#000, 33.5%)
$gray-light   = lighten(#000, 60%)
$gray-lighter = lighten(#000, 93.5%)
$black = #000

$brand-primary = #428bca
$brand-success = #5cb85c
$brand-info = #5bc0de
$brand-warning = #f0ad4e
$brand-danger = #d9534f

$ar-black           = #393939
$ar-strongOrange    = #FF5A09
$ar-orange          = #F3843E
$ar-lightOrange     = #FF9900
$ar-gray            = #6E6E6E

$font-family-helvetica = "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif
$font-family-weight = 300

$header-height = 50px

html, body, #big-container, #left-bar, #searchbar
  height 100%

// Hack to get full height with magic ember things
body > .ember-view
  height 100%

#header
  height 50px
  background-color $gray-dark
  border-bottom 1px solid lighten($gray-darker, 15%)
  box-shadow 0px 3px 5px 0px $black

#main-parent
  height unquote("calc(100% - " + $header-height + ")")
  overflow-y scroll

#left-bar
  padding-left 0
  padding-right 0
  background-color $gray-dark
  overflow-y scroll

#searchbar
  background-color $gray-dark
  overflow-y scroll
  color $gray-light

.big-title
  color $ar-strongOrange
  text-decoration none
  font-size 30px
  display block
  padding 15px 0px 0px 20px
  font-family: $font-family-helvetica 
  font-weight: $font-family-weight 

.big-title:hover
  color $ar-strongOrange
  text-decoration none

.search-result
  position relative
  overflow hidden
  margin-bottom 5px
  .videoArt
    width 200px
    height 150px
    padding 6px 0px 6px 6px
.search-result:hover
  background-color $gray-darker
   
#playlist-list
  color $gray-lighter
  padding 10px 0px 10px 0px
  margin 0

.playlist-item
  width 100%
  display block
  padding 5px 10px 5px 10px
  vertical-align middle
  border-top 1px solid transparent
  border-bottom 1px solid transparent
  outline 0
  .playlist-name
    color lighten($gray-light, 50%)
  .song-count
    font-size 11px
    font-weight 300
    color $gray-light
    padding-left 3px
  .listener-count
    .glyphicon
      color $gray-lighter
      font-size 11px
    color $gray-light
  .listener-count.empty
    .glyphicon
      color $gray
    color transparent

.playlist-item:hover
  text-decoration none
  .playlist-name
    color $gray-lighter

.playlist-item.active
  border-top 1px solid darken($gray-darker, 20%)
  border-bottom 1px solid lighten($gray-darker, 15%)
  background-color $gray-darker

.video-list
  width 100%

.video-item
  position relative

#youtube-player
  width 100%
